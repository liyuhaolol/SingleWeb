<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/web_white">
    <LinearLayout
        android:id="@+id/cns_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/web_gray">
        <View
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <RelativeLayout
                android:id="@+id/close"
                android:layout_width="37dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/web_close"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/web_black"
                android:ellipsize="end"
                android:textSize="17sp"
                android:lines="1"/>
            <RelativeLayout
                android:id="@+id/share"
                android:layout_width="37dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/web_share"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/copy"
                android:layout_width="37dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/web_copy"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <spa.lyh.cn.ft_webview.webview.SingleWebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cns_action_bar"
        android:layout_above="@+id/nav_bar"
        android:overScrollMode="never"/>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/cns_action_bar"
        android:progressDrawable="@drawable/pg"
        android:visibility="visible"/>

    <View
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>